<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addCardActivity">

    <ImageView
        android:id="@+id/delete"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/x_mark" />

    <ImageView
        android:id="@+id/save"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/delete"
        android:layout_marginEnd="22dp"
        android:src="@drawable/save" />

    <EditText
        android:id="@+id/newQuestion"
        android:layout_width="301dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:ems="10"
        android:hint="Write question here"
        android:inputType="textMultiLine" />


    <EditText
        android:id="@+id/newCorrectAnswer"
        android:layout_width="303dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="113dp"
        android:ems="10"
        android:hint="Write correct answer here"
        android:textColor="@color/colorPrimary"
        android:inputType="textMultiLine" />

    <EditText
        android:id="@+id/newIncorrectAnswer1"
        android:layout_width="303dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="179dp"
        android:ems="10"
        android:hint="Write incorrect answer here"
        android:textColor="@color/colorRed"
        android:inputType="textMultiLine" />

    <EditText
        android:id="@+id/newIncorrectAnswer2"
        android:layout_width="303dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:ems="10"
        android:hint="Write incorrect answer here"
        android:textColor="@color/colorRed"
        android:inputType="textMultiLine" />

</RelativeLayout>