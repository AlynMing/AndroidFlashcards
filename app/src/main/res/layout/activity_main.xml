<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/flashcard_question"
        android:layout_width="match_parent"
        android:layout_height="154dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/card_background"
        android:gravity="center"
        android:text="Question"
        android:textAlignment="center"
        android:textColor="@color/colorRed"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/flashcard_answer1"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="243dp"
        android:background="@color/colorCream"
        android:gravity="center"
        android:text="Wrong Answer"
        android:textAlignment="center"
        android:textColor="@color/colorBlack"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/flashcard_answer2"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="164dp"
        android:background="@color/colorCream"
        android:gravity="center"
        android:text="Wrong Answer"
        android:textAlignment="center"
        android:textColor="@color/colorBlack"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/flashcard_answer3"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="86dp"
        android:background="@color/colorCream"
        android:gravity="center"
        android:text="Answer"
        android:textAlignment="center"
        android:textColor="@color/colorBlack"
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/toggle_choice_visibility"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:src="@drawable/ic_eyeo" />

    <ImageView
        android:id="@+id/next"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/flashcard_answer1"
        android:layout_alignTop="@+id/back"
        android:src="@drawable/next" />

    <ImageView
        android:id="@+id/back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/flashcard_answer1"
        android:layout_marginTop="171dp"
        android:src="@drawable/back"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/delete"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/next"
        android:layout_centerHorizontal="true"
        android:src="@drawable/delete" />

    <ImageView
        android:id="@+id/add_activity"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/flashcard_answer1"
        android:layout_alignTop="@+id/toggle_choice_visibility"
        android:src="@drawable/add" />

    <ImageView
        android:id="@+id/edit_question"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/flashcard_answer1"
        android:layout_alignTop="@+id/toggle_choice_visibility"
        android:src="@drawable/edit" />

</RelativeLayout>